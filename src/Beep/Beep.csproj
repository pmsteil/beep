<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>beep</ToolCommandName>
    <PackageId>dev.patiman.beep</PackageId>
    <Authors>Patiman</Authors>
    <PackageVersion>0.1.0</PackageVersion>
    <Description>Play a pleasant completion sound from your terminal.</Description>
    <RepositoryUrl>https://example.local/ai_projects/beep</RepositoryUrl>
    <PackageProjectUrl>https://example.local/ai_projects/beep</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Windows.Extensions" Version="8.0.0" />
  </ItemGroup>

</Project>
